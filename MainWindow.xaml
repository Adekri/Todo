<Window x:Class="todo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:todo"
        mc:Ignorable="d"
        Title="todo" Height="406" Width="600"
        ResizeMode="CanMinimize">
    <StackPanel Margin="10">

        <!--ListView-->
        <GroupBox Header="Tasks"
                  Height="300">
            <StackPanel>
                <DockPanel Height="26"
                           Margin="0,0,0,5">
                    <Label Content="Show:"/>
                    <ComboBox Name="ShowComboBox"
                              Width="100"
                              HorizontalAlignment="Left"
                              SelectedIndex="0"
                              VerticalContentAlignment="Center"
                              Margin="5,0,0,0"
                              SelectionChanged="Show_Event">
                        <ComboBoxItem Content="All"/>
                        <ComboBoxItem Content="Only pending"/>
                        <ComboBoxItem Content="Only done"/>
                    </ComboBox>

                    <DockPanel Margin="10,0,0,0" Width="396">
                        <Button x:Name="DeleteAllBtn"
                            Width="150"
                            HorizontalAlignment="Right"
                            Content="Delete all done"/>
                    </DockPanel>
                </DockPanel>

                <ListView x:Name="PrimaryList"
                          VerticalAlignment="Top"
                          Margin="5"
                          Height="235">
                    <ListView.View>
                        <GridView>
                            <GridView.Columns>
                                <GridViewColumn Header="Id"
                                Width="35"
                                DisplayMemberBinding="{ Binding Id }"/>
                                <GridViewColumn Header="Task"
                                Width="220"
                                DisplayMemberBinding="{ Binding Content }"/>
                                <GridViewColumn Header="Date of creation"
                                Width="150"
                                DisplayMemberBinding="{ Binding Date }"/>
                                <GridViewColumn Header="State"
                                Width="150"
                                DisplayMemberBinding="{ Binding State }"/>
                            </GridView.Columns>
                        </GridView>
                    </ListView.View>

                    <!-- Add event handler to ListViewItem -->
                    <ListView.Resources>
                        <Style TargetType="ListViewItem">
                            <EventSetter Event="MouseDoubleClick"
                         Handler="ListViewItem_MouseDoubleClick"/>
                        </Style>
                    </ListView.Resources>
                </ListView>
            </StackPanel>
        </GroupBox>

        <!--Add Task-->
        <GroupBox Header="Add Task">
            <StackPanel Margin="5">
                <DockPanel Height="26">
                    <TextBox x:Name="AddInput"
                             Width="435"
                             HorizontalAlignment="Left"
                             Padding="3,0,0,0"
                             VerticalContentAlignment="Center"/>
                    <Button x:Name="AddBtn"
                            Width="100"
                            HorizontalAlignment="Right"
                            Content="Add" 
                            Click="AddBtn_Click"/>
                </DockPanel>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</Window>
