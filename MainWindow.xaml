<Window x:Class="todo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:todo"
        mc:Ignorable="d"
        Title="Todo List" Height="450" Width="600"
        ResizeMode="CanMinimize" Background="#F0F0F0">
    <StackPanel Margin="10">

        <!--ListView-->
        <GroupBox Header="Tasks" Margin="0,0,0,10" Background="#FFFFFF" BorderBrush="#CCCCCC" BorderThickness="1">
            <StackPanel>
                <DockPanel Height="30" Margin="0,0,0,5">
                    <Label Content="Show:" VerticalAlignment="Center" Margin="5,0"/>
                    <ComboBox Name="ShowComboBox" Width="100" HorizontalAlignment="Left" SelectedIndex="0" VerticalContentAlignment="Center" Margin="5,0,0,0" SelectionChanged="Show_Event">
                        <ComboBoxItem Content="All"/>
                        <ComboBoxItem Content="Todo"/>
                        <ComboBoxItem Content="Done"/>
                    </ComboBox>

                    <Button x:Name="DeleteAllBtn" Width="150" HorizontalAlignment="Right" Content="Delete all done" Margin="10,0,0,0" Background="#FF4CAF50" Foreground="White" FontWeight="Bold" Click="DeleteAllBtn_Click"/>
                </DockPanel>
                <ListView x:Name="PrimaryList" Height="235" Background="White" BorderBrush="#CCCCCC" BorderThickness="1">
                    <ListView.Resources>
                        <Style TargetType="{x:Type ListViewItem}">
                            <EventSetter Event="Control.MouseDoubleClick" Handler="ListViewItem_MouseDoubleClick"/>
                        </Style>
                    </ListView.Resources>
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Id" Width="35" DisplayMemberBinding="{Binding Id}"/>
                            <GridViewColumn Header="Task" Width="220" DisplayMemberBinding="{Binding Content}"/>
                            <GridViewColumn Header="Date of creation" Width="150" DisplayMemberBinding="{Binding Date}"/>
                            <GridViewColumn Header="State" Width="150" DisplayMemberBinding="{Binding State}"/>
                        </GridView>
                    </ListView.View>

                    <ListView.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Označit jako Todo" Click="MarkAsTodo_Click"/>
                            <MenuItem Header="Označit jako Done" Click="MarkAsDone_Click"/>
                        </ContextMenu>
                    </ListView.ContextMenu>
                </ListView>
            </StackPanel>
        </GroupBox>

        <!--Add Task-->
        <GroupBox Header="Add Task" Background="#FFFFFF" BorderBrush="#CCCCCC" BorderThickness="1">
            <StackPanel Margin="5">
                <DockPanel Height="30">
                    <TextBox x:Name="AddInput" Width="435" HorizontalAlignment="Left" Padding="5" VerticalContentAlignment="Center" Margin="0,0,5,0" Background="#F9F9F9" BorderBrush="#CCCCCC" BorderThickness="1"/>
                    <Button x:Name="AddBtn" Width="100" HorizontalAlignment="Right" Content="Add" Click="AddBtn_Click" Background="#FF2196F3" Foreground="White" FontWeight="Bold"/>
                </DockPanel>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</Window>